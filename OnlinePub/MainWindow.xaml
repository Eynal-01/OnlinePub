<Window x:Class="OnlinePub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlinePub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Width="500" Height="50" VerticalAlignment="Top">
            
        </ComboBox>
        <Canvas>
            <Label Name=""></Label>
        </Canvas>
        <Button Content="Buy" FontSize="20" Name="BuyBtn" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40"></Button>
        <Button Content="Reset" FontSize="20" Name="ResetBtn" Width="100" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="40"></Button>
        <Button Content="Show history" FontSize="20" Name="Btn" Width="200" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="40"></Button>
    </Grid>
</Window>
